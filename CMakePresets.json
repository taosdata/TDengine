{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "conan-default",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_POLICY_DEFAULT_CMP0091": "NEW",
        "USE_CONAN": "ON"
      },
      "toolchainFile": "${sourceDir}/build/${presetName}/generators/conan_toolchain.cmake"
    },
    {
      "name": "conan-debug",
      "displayName": "Conan Debug",
      "description": "Debug build using Conan dependencies",
      "inherits": "conan-default",
      "binaryDir": "${sourceDir}/build/conan-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TEST": "ON",
        "BUILD_TOOLS": "ON"
      }
    },
    {
      "name": "conan-release",
      "displayName": "Conan Release",
      "description": "Release build using Conan dependencies",
      "inherits": "conan-default",
      "binaryDir": "${sourceDir}/build/conan-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TEST": "ON",
        "BUILD_TOOLS": "ON"
      }
    },
    {
      "name": "default",
      "displayName": "Default (without Conan)",
      "description": "Traditional build without Conan, using ExternalProject",
      "binaryDir": "${sourceDir}/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TEST": "ON",
        "BUILD_TOOLS": "ON",
        "USE_CONAN": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "conan-debug",
      "configurePreset": "conan-debug",
      "displayName": "Build Conan Debug",
      "description": "Build debug configuration with Conan"
    },
    {
      "name": "conan-release",
      "configurePreset": "conan-release",
      "displayName": "Build Conan Release",
      "description": "Build release configuration with Conan"
    },
    {
      "name": "default",
      "configurePreset": "default",
      "displayName": "Build Default",
      "description": "Build without Conan"
    }
  ],
  "testPresets": [
    {
      "name": "conan-debug",
      "configurePreset": "conan-debug",
      "displayName": "Test Conan Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "conan-release",
      "configurePreset": "conan-release",
      "displayName": "Test Conan Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
