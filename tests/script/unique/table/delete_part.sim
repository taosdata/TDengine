sleep 3000

sql create database dpdb
sql use dpdb

$loop = 0
begin:

    print ======== step1
	
	$x = 0
	while $x < 16
	  $tb = tb . $x
	  sql create table $tb (ts timestamp, i int)
	  sql insert into $tb values(now, $x )
	  $x = $x + 1
	endw

	print ======== step2
	system sh/exec.sh -n dnode2 -s stop
	$x = 0
	while $x < 16
	  $tb = tb . $x
	  sql drop table $tb
	  $x = $x + 1
	endw
	
	print ======== step3
	sleep 2000
	system sh/exec.sh -n dnode2 -s start
	sleep 3000
	
	print ===> test times : $loop
    if $loop > 20 then	  
	  return 0
	endi

	$loop = $loop + 1
	
goto begin
  
