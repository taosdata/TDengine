sql select * from db1.tb1
if $rows != 1 then
	return -1
endi
if $data01 != 2 then
	return -1
endi

sql use db1
print ========= step4
$x = 1
while $x < 20

  $tb = tb . $x
  sql drop table $tb
  
  sleep 1000
  sql_error insert into $tb values(now, -1)
  
  step4:
  
  $x = $x + 1  
  $tb = tb . $x
  
  sql create table $tb (ts timestamp, i int)
  sql insert into $tb values(now, $x )
  sql select * from $tb
  if $rows != 1 then
	return -1
  endi
  if $data01 != $x then
	return -1
  endi
  
  print ===> loop times: $x
