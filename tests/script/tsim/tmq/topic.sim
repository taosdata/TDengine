print == create child table, normal table and insert data
$i = 0
while $i < $ctbNum
  $ctb = $ctbPrefix . $i
  $ntb = $ntbPrefix . $i
  sql create table $ctb using $stbPrefix tags( $i )
  sql create table $ntb (ts timestamp, c1 int, c2 float, c3 binary(16))
  $i = $i + 1
endw

